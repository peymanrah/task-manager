{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Task Manager: Control Tower Server",
			"type": "shell",
			"command": "cd '${workspaceFolder}'; powershell -ExecutionPolicy Bypass -File './start-server.ps1'",
			"isBackground": true,
			"problemMatcher": [],
